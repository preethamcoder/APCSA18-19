// ****************************************************************
//   ManageAccounts.java
//
//   Use Account class to create and manage Sally and Joe's 
//   bank accounts       
// ****************************************************************

public class ManageAccounts
{
    public static void main(String[] args)
    {
      Account acct1, acct2;

 //create account1 for Sally with $1000
 acct1 = new Account(1000, "Sally", 1111);

 //create account2 for Joe with $500
acct2 = new Account(500, "Joe", 2222);
 //deposit $100 to Joe's account
acct2.deposit(100.0);
 //print Joe's new balance (use getBalance())
double gotBalance = acct2.getBalance();
System.out.println("Joe's balance is "+gotBalance);
 //withdraw $50 from Sally's account
acct1.withdraw(50.0);
 //print Sally's new balance (use getBalance())
gotBalance = acct1.getBalance();
System.out.println("Sally's balance is "+gotBalance);
 //charge fees to both accounts
double chargedFees1 = acct1.chargeFee();
double chargedFees2 = acct2.chargeFee();
System.out.println("\nSally's balance after the fee is "+chargedFees1);
System.out.println("Joe's balance after the fee is "+chargedFees2+"\n");
 //change the name on Joe's account to Joseph
acct2.changeName("Joseph");
 //print summary for both accounts
String firstAcc = acct1.toString();
String secondAcc = acct2.toString();
System.out.println("Name, accountNumber, accountBalance: "+firstAcc);
System.out.println("Name, accountNumber, accountBalance: "+secondAcc);
    }
}

