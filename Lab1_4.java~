// This program is going to help me learn how to use the print statement and print quotes in multiple lines
//****************************************************************

public class Lab1_4
{
  public static void main(String[] args){
    System.out.println("Knowledge is power.");
    System.out.println("  Knowledge  ");
    System.out.println("     is     ");
    System.out.println("    power    ");
    String boxTop = "============";
    String sideOne = "| Knowledge|";
    String sideTwo = "| is       |";
    String sideThree = "| power    |";                  
    String boxBottom = "============";
    System.out.println(boxTop);
    System.out.println(sideOne); 
    System.out.println(sideTwo);
    System.out.println(sideThree);
    System.out.println(boxBottom);
  }
}
